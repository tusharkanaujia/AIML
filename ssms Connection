# Helper function
function Write-ProjectFile {
    param([string]$RelPath, [string]$Content)
    $fullPath = Join-Path $RootDir $RelPath
    $Content | Out-File -FilePath $fullPath -Encoding UTF8 -NoNewline
    Write-Host "  â†’ $RelPath" -ForegroundColor Gray
}

